<definitions id="definitions"
             targetNamespace="http://activiti.org/bpmn20"
             xmlns:activiti="http://activiti.org/bpmn"
             xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <process id="montitorGitCreateJobCreateIssue" name="Derovision Instances in openstack">

        <startEvent id="theStart" />

        <sequenceFlow id='flow10' sourceRef='theStart' targetRef='gitMonitor' />

        <!-- git -->

        <serviceTask id="gitMonitor"
                     name="Check a Git Repo For changes"
                     activiti:class="node.builder.bpm.GitMonitorTask" />

        <sequenceFlow id='flow20' sourceRef='gitMonitor' targetRef='changeTask' >
            <conditionExpression xsi:type="tFormalExpression">
                <![CDATA[${result.data.repositoryDidChange}]]>
            </conditionExpression>
        </sequenceFlow>
        <sequenceFlow id='flow30' sourceRef='gitMonitor' targetRef='noChangeTask' >
            <conditionExpression xsi:type="tFormalExpression">
                <![CDATA[${!result.data.repositoryDidChange}]]>
            </conditionExpression>
        </sequenceFlow>

        <scriptTask id="changeTask"
                    name="log change"
                    scriptFormat="groovy" >
            <script>
                println("Change detected in repository ${projectName}, creating Jenkins Job")
                execution.setVariable("jenkinsJobName", "${projectName}-${result.data.reference}".toLowerCase())
                //execution.setVariable("jenkinsJobXml", "")
            </script>
        </scriptTask>
        <scriptTask id="noChangeTask"
                    name="log no change"
                    scriptFormat="groovy" >
            <script>
                println("No change detected in repository ${projectName}, repository at ${result.data.reference}")
                println(result.data.diff)
            </script>
        </scriptTask>

        <sequenceFlow id='flow40' sourceRef='changeTask' targetRef='createJobTask' />
        <sequenceFlow id='flow50' sourceRef='noChangeTask' targetRef='receiveTask' />

        <!-- end git -->
        <!-- jenkins -->

        <serviceTask id="createJobTask"
                     name="create a job"
                     activiti:class="node.builder.bpm.CreateJenkinsJobTask" />

        <sequenceFlow id='flow55' sourceRef='createJobTask' targetRef='createSlaveTask' />

        <serviceTask id="createSlaveTask"
                     name="create a slave"
                     activiti:class="node.builder.bpm.CreateJenkinsSlaveTask" />

        <sequenceFlow id='flow60' sourceRef='createSlaveTask' targetRef='runJobTask' />

        <serviceTask id="runJobTask"
                     name="run a job"
                     activiti:class="node.builder.bpm.RunJenkinsJobTask" />
        <!-- success -->
        <sequenceFlow id='flow70' sourceRef='runJobTask' targetRef='receiveTask' >
            <conditionExpression xsi:type="tFormalExpression">
                <![CDATA[${result.data.jenkinsBuild.result.toString() == "SUCCESS"}]]>
            </conditionExpression>
        </sequenceFlow>
        <!-- failure -->
        <sequenceFlow id='flow80' sourceRef='runJobTask' targetRef='prepareIssueTask' >
            <conditionExpression xsi:type="tFormalExpression">
                <![CDATA[${result.data.jenkinsBuild.result.toString() == "FAILURE"}]]>
            </conditionExpression>
        </sequenceFlow>
        <!-- end jenkins -->

        <!-- jira -->
        <scriptTask id="prepareIssueTask"
                    name="populate issue fields"
                    scriptFormat="groovy" >
            <script>
                println("Jenkins Job ${jenkinsJobName} failed, creating issue")
                execution.setVariable("jiraIssueSummary", "Build failed from commit ${result.data.reference}")

                def issueDescription = """\
                Diff
                ${result.data.diff}

                Build
                ${result.data.jenkinsBuild.url}

                Console
                ${result.data.jenkinsBuild.consoleUrl}
                """

                execution.setVariable("jiraIssueDescription", issueDescription )
            </script>
        </scriptTask>

        <sequenceFlow id='flow90' sourceRef='prepareIssueTask' targetRef='createIssueTask' />

        <serviceTask id="createIssueTask"
                     name="create an issue"
                     activiti:class="node.builder.bpm.CreateJiraIssueTask" />

        <sequenceFlow id='flow100' sourceRef='createIssueTask' targetRef='receiveTask' />
        <!-- end jira -->

        <!-- paperwork -->
        <receiveTask id="receiveTask" />

        <sequenceFlow id='flow10000' sourceRef='receiveTask' targetRef='theEnd' />

        <endEvent id="theEnd" />
        <!-- end paperwork -->
    </process>

</definitions>